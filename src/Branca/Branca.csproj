<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <LangVersion>default</LangVersion>
    <Nullable>enable</Nullable>
    <Authors>Aman Agnihotri</Authors>
    <Product>Branca</Product>
    <Title>Branca</Title>
    <Description>A .NET 5 library for generating and validating Branca tokens.</Description>
    <Copyright>Copyright Â© 2021 Aman Agnihotri</Copyright>
    <PackageVersion>0.1.0</PackageVersion>
    <PackageProjectUrl>https://github.com/AmanAgnihotri/Branca</PackageProjectUrl>
    <PackageLicenseExpression>LGPL-3.0-or-later</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/AmanAgnihotri/Branca.git</RepositoryUrl>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <PackageTags>Branca;Token;Authentication;Authorization</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="NaCl.Core" Version="2.0.2"/>
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="Branca.Tests"/>
  </ItemGroup>

</Project>
